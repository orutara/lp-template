{
  "name": "lp-template",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "html:plain": "cpx 'src/html/**/*.html' 'dist/'",
    "html": "npm-run-all html:*",
    "css:sass": "sass src/scss/style.scss:dist/css/style.css --style=expanded --no-source-map",
    "css:postcss": "postcss dist/css/style.css -u autoprefixer -d dist/css/",
    "css": "npm-run-all -s css:*",
    "js:babel": "./node_modules/.bin/babel ./src/js --out-dir ./dist/js",
    "js:uglifyjs": "uglifyjs dist/js/script.js -o dist/js/script.js",
    "js": "npm-run-all -s js:*",
    "image:min": "node imagemin.js",
    "image": "npm-run-all -s image:*",
    "watch:html": "watch 'npm run html' ./src/html",
    "watch:css": "watch 'npm run css' ./src/scss",
    "watch:js": "watch 'npm run js' ./src/js",
    "watch:image": "watch 'npm run image' ./src/images",
    "watch:server": "browser-sync start --server dist --files 'dist, **/*.html, !node_modules/**/*'",
    "watch": "npm-run-all -p watch:*"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.8",
    "babel-cli": "^6.26.0",
    "browser-sync": "^2.27.7",
    "cpx": "^1.5.0",
    "cssnano": "^5.0.17",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.16",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.7",
    "uglify-js": "^3.15.1",
    "watch": "^1.0.2"
  },
  "browserslist": [
    "defaults"
  ]
}
